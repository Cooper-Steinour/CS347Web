.column {
	float: right;
	width: 25%;
	padding:0px;
	height: 100%;
	text-align:center;
	text-decoration: none;
}

.row:after {
	content: "";
	display: table;
	clear: both;
}

img {
    max-width: 100%;
    max-height: 100%;
}

img:hover {
	opacity: 0.5;
}	



h3 {text-align: center;}
h2 {text-align: center;}
h1 {text-align: center; font-family: verdana;}